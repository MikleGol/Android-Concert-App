<?xml version="1.0" encoding="utf-8"?>
<!-- res/values/styles.xml -->
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Светлая тема -->
        <item name="backgroundColor">@color/grey_transparent_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="editTextBackground">@drawable/edit_text_transparent_bg_light</item>
        <item name="hintTextColor">@color/grey_transparent_dark</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Темная тема -->
        <item name="backgroundColor">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="editTextBackground">@drawable/edit_text_transparent_bg_dark</item>
        <item name="hintTextColor">@color/grey_transparent_light</item>
    </style>
</resources>