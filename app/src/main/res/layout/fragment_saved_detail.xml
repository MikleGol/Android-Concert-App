<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavedDetailFragment"
    android:orientation="vertical"
    android:background="@color/black"
    android:id="@+id/linear_saved_detail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:background="@drawable/background_saved_detail"/>


            <LinearLayout
                android:id="@+id/linear_saved_top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back"
                    app:tint="@color/red"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_saved"
                    app:tint="@color/red"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/image_saved_detail"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:layout_below="@id/linear_saved_top_bar"
                android:layout_centerInParent="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/popular_1"/>

            <TextView
                android:id="@+id/text_save_detail_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_saved_detail"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="32sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_save_detail_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_margin="20dp"
                android:layout_below="@id/text_save_detail_title"/>

        </RelativeLayout>
    </ScrollView>
    



</LinearLayout>